<ScreenManager>
    id: scrn_mngr
    Screen1:
    Screen2:
    Screen3:
    Screen4:
    Screen5:
    Screen6:
    Screen7:

<Screen1>
    id:scrn_1

    BackgroundLayout1:


    MDIconButton:
        id: start
        icon: "Assets\PlayButton.png"
        pos_hint: {"center_x": .5, "center_y": .3}
        user_font_size: "48sp"
        on_release:
            root.manager.transition.direction = 'left'
            root.manager.current = 'S2'


    MDRaisedButton:
        id:about
        text: "About"
        pos_hint: {"center_x": .7, "center_y": .3}
        md_bg_color: 1, 0, 1, 1
        on_release:
            root.manager.transition.direction = 'left'
            root.manager.current = 'S3'

    MDRaisedButton:
        id:admin
        text: "Admin"
        pos_hint: {"center_x": .3, "center_y": .3}
        md_bg_color: 1, 0, 1, 1
        on_release:
            root.manager.transition.direction = 'right'
            root.manager.current = 'S4'



    MDCard:
        id:card
        color: (0,1,1,1)
        orientation:"horizontal"
        size_hint: [0.7,0.42]
        pos_hint: {'center_x':0.5,'center_y':0.75}

        GridLayout:
            cols:1
            rows:2
            size: root.width, root.height
            MDLabel:
                text:"MEDIBOT"
                color:(199/255, 34/255, 34/255,1)
                text_size: [0.6,0.3]
                font_size:120
                bold:True
                halign: "center"
                valign: "middle"

            MDLabel:
                text:"Select an option to begin"

                text_size: [0.4,0.3]
                font_size:32
                bold:True
                halign: "center"



<Screen2>
    id:Screen2
    name:'Screen2'
    BackgroundLayout2:

    BoxLayout:
        id: rightbox
        orientation:"horizontal"
        background_normal:''
        background_color:(0,0,1,1)
        pos_hint:{'x':0.458,'y':0.2}
        MDLabel:
            color:(0,0,0,1)
            id:number
            bold:True
            italic:True
            text:"\n\nEnter your symptoms in the left.\n MATCH ANY TWO \n Choose from these: \nSymptom1 :1)indigestion;2) Rash;3) Itchy eye; 4)Fever ;5)cough that \n lasts longer than 3 weeks; 6)sore throat,7)sudden fever; 8)diarrhoea;\n 9)sore, red eyes \nSymptom2: 1)nausea and diarrhea; 2)Spots;3) Tearing,Mucus from\n eye;4) Chest pain and shortness of breath; 5)Fever; 6)cough lasts for\n long time; 7)abdominal pain, aching muscles; 8)Stomach cramps;\n 9)fever \nSymptom3: 1)abdominal swelling ;  2)Blisters; 3)Redness in eye ;\n4)Nausea and vomiting;5) Night sweats;6) aches and pains ;\n 7) headache ,  sorethroat;8) vomiting;9) greyish-white spots\n on the inside of cheeks"
            font_size:23
            size:root.size

    MDIconButton:
        id: start
        icon: "Assets\BackButton.png"
        pos_hint: {"center_x": .95, "center_y": .15}
        user_font_size: "32sp"
        on_press:
            root.manager.transition.direction = 'right'
            root.manager.current = 'S1'



    MDCard:
        id:card1
        color:(1,0,1,1)
        orientation:"horizontal"
        size_hint: [0.4,0.9]
        pos_hint:{'center_x':0.25,'center_y':0.5}


        GridLayout:
            cols:1
            row_force_default: True
            row_default_height: '32dp'
            size_hint_y: None
            height: self.minimum_height
            spacing:50
            padding:10
            MDLabel:

                text:"SYMPTOM-1"
                font_size:28
                halign: "center"
                valign: "middle"

            MDTextFieldRect:
                id:symp1
                size_hint: 1,0.7
                multiline:False
                height: "30dp"



            MDLabel:

                text:"SYMPTOM-2"
                font_size:28
                halign: "center"
                valign: "middle"


            MDTextFieldRect:
                id:symp2
                size_hint: 1,0.7
                multiline:False
                height: "30dp"

            MDLabel:

                text:"SYMPTOM-3"
                font_size:28
                halign: "center"
                valign: "middle"

            MDTextFieldRect:
                id:symp3
                size_hint: 1,0.7
                multiline:False
                height: "30dp"

            GridLayout:
                cols:2
                rows:1
                spacing:90
                MDRaisedButton:

                    id:Go
                    text: "Go!"
                    pos_hint: {"center_x": .3, "center_y": .3}
                    on_release: root.press()
                    md_bg_color: 1, 0, 1, 1
                MDRaisedButton:

                    id:Reset
                    text: "reset"
                    on_release: root.reset()



<Screen3>

    id:Screen3
    #name:'S3'


    BoxLayout:

        orientation:"horizontal"
        orientation:"vertical"
        canvas.before:
            Color:
                rgb:(0,1,1,1)
            RoundedRectangle:
                pos: self.pos
                size:root.width,root.height

                radius:[0,0,90,90]


    MDIconButton:
        icon: "Assets\BackButton.png"
        pos_hint: {"center_x": .95, "center_y": .15}
        user_font_size: "32sp"
        on_press:
            root.manager.transition.direction = 'right'
            root.manager.current = 'S1'

    MDLabel:
        color:(0,0,0,1)
        id:number
        text:"MediBot is a python program that helps you to diagnose yourself. This program asks to enter the symptoms you are experiencing and then returns the name of the disease you have.It helps you  identify your disease and suggests a doctor."
        bold:True
        italic:True
        font_size:23
        halign:'center'
        valign:'middle'
        size:root.size



